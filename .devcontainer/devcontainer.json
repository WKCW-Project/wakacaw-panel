{
  "name": "Android Dev",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "postCreateCommand": "./scripts/setup-android.sh",
  "features": {
    "ghcr.io/devcontainers/features/android-sdk:1": {
      "packages": ["platform-tools", "build-tools;34.0.0"]
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "fwcd.kotlin"
      ]
    }
  }
}